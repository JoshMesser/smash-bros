{{#liquid-if create class="create-match"}}
  <form class="create-match" {{action 'createMatch' on="submit"}}>
    <fieldset>
      <legend>
        <h3>Create a new match</h3>
      </legend>

      <table class="create-match">
        <thead>
          <tr>
            <th>Match Type</th>
            <th>FFA?</th>
            <th>Limit (minutes)</th>
            <th>Stage</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              {{#each matchTypes as |type|}}
                <label>
                  {{radio-button value=type.label groupValue=match.type}}
                  {{type.label}}
                </label>
              {{/each}}
            </td>
            <td>
              {{#each ffas as |ffa|}}
                <label>
                  {{radio-button value=ffa.label groupValue=match.coop}}
                  {{ffa.label}}
                </label>
              {{/each}}
            </td>
            <td>
              {{input type="number" max="99" min="0" value=match.limit}}
              <p>Enter zero (0) for infinite</p>
            </td>
            <td rowspan="2">
              {{#each stages as |stage|}}
                <label>
                  {{radio-button value=stage.label groupValue=match.stage}}
                  {{stage.label}}
                </label>
              {{/each}}
            </td>
          </tr>
          <tr>
            <td colspan="3" style="text-align:right;">
              {{#if selectedStageImage}}
                <img src="{{selectedStageImage}}" height="200" />
                <p>These images are from the WiiU version.</p>
              {{/if}}
            </td>
          </tr>
          <tr>
            <td colspan="4" style="text-align:right;">
              <button type="button" {{action 'toggleCreate'}}>Cancel</button>
              <button type="submit">Create</button>
            </td>
          </tr>
        </tbody>
      </table>

    </fieldset>
  </form>
{{else}}
  <center>
    <button type="button" {{action 'toggleCreate'}}>Create a new match</button>
  </center>
{{/liquid-if}}
